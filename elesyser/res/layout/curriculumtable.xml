<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/progresslayout" android:layout_centerHorizontal="true" android:layout_width="wrap_content" android:layout_height="match_parent">
    <ProgressBar android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content">    
	</ProgressBar>
    <TextView android:layout_width="wrap_content"
    		  android:layout_alignParentLeft="true"
    		  android:text="TextView"
    		  android:layout_toRightOf="@+id/progress"
			  android:layout_alignTop="@+id/progress"
			  android:layout_alignBottom="@+id/progress"
			  android:gravity="center_vertical"
    		  android:layout_height="wrap_content"
    		  android:id="@+id/textView1">
	</TextView>
    </RelativeLayout> 
    <TextView android:text="TextView"
    		  android:id="@+id/dayofweek"
    		  android:layout_width="wrap_content"
    		  android:textSize="18dip"
    		  android:padding="10dip"
    		  android:layout_height="wrap_content"></TextView>
    <ListView android:id="@+id/lv_curriculum"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:layout_below="@+id/dayofweek">
    			</ListView>
    <DigitalClock android:text="DigitalClock" android:visibility="invisible" android:textSize="18dip" android:padding="10dip" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:id="@+id/digitalClock1" android:layout_height="wrap_content"></DigitalClock>
    
</RelativeLayout>
